<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/optionsActivity_cardView_changeRecyclerColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/optionsActivity_spaceBetweenCardViews_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/optionsActivity_margin"
            android:drawableLeft="@drawable/settings"
            android:drawablePadding="@dimen/optionsActivity_margin"
            android:drawableStart="@drawable/settings"
            android:text="@string/optionsActivity_changeRecyclerColor"
            android:textSize="@dimen/optionsActivity_optionText_fontSize" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/optionsActivity_cardView_changeRecyclerColor_sample"
        android:layout_width="match_parent"
        android:layout_height="@dimen/optionsActivity_margin"
        app:cardBackgroundColor="@color/secondaryTheLightestColor">

    </android.support.v7.widget.CardView>
</LinearLayout>