<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/optionsActivity_spaceBetweenCardViews_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/settings"
        android:drawablePadding="@dimen/optionsActivity_margin"
        android:drawableStart="@drawable/settings"
        android:padding="@dimen/optionsActivity_margin"
        android:text="@string/optionsActivity_changeLanguage"
        android:textSize="@dimen/optionsActivity_optionText_fontSize" />

    <TextView
        android:id="@+id/optionsActivity_tv_changeLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="@dimen/optionsActivity_margin"
        android:textSize="@dimen/optionsActivity_optionText_fontSize" />

</android.support.v7.widget.CardView>