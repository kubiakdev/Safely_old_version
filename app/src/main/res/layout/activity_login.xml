<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kubiakpatryk.safely.ui.login.LoginActivity">

    <TextView
        android:id="@+id/login_activity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/patternLock_selectYourPattern"
        android:textAlignment="center"
        android:textSize="@dimen/activityLogin_tvSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024" />

    <com.andrognito.patternlockview.PatternLockView
        android:id="@+id/login_activity_pattern_lock_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_activity_text_view"
        app:correctStateColor="@color/patternCorrect"
        app:normalStateColor="@color/patternNormal"
        app:wrongStateColor="@color/patternWrong"
        app:dotNormalSize="@dimen/activityLogin_patternLock_normalDotSize"
        app:dotSelectedSize="@dimen/activityLogin_patternLock_selectedDotSize"
        app:pathWidth="@dimen/pattern_lock_path_width"/>

</android.support.constraint.ConstraintLayout>
