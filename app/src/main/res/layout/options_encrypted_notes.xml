<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/optionsActivity_margin"
        android:drawableLeft="@drawable/settings"
        android:drawablePadding="@dimen/optionsActivity_margin"
        android:drawableStart="@drawable/settings"
        android:text="@string/optionsActivity_showEncryptedNotes"
        android:textSize="@dimen/optionsActivity_optionText_fontSize" />

    <Switch
        android:id="@+id/optionsActivity_switch_showEncryptedNotes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/optionsActivity_margin" />

</android.support.v7.widget.CardView>