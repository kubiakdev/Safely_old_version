<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/noteModel_cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/noteModel_imageView_bookmarkShape"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="-16dp"
            android:layout_marginEnd="-16dp"
            android:layout_marginRight="-16dp"
            android:rotation="45"
            android:layout_gravity="end"
            android:visibility="gone"
            android:contentDescription="@string/noteModel_shapeImageDescription"
            android:src="@drawable/bookmark_shape" />

        <TextView
            android:id="@+id/noteModel_textView_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:paddingLeft="0dp"
            android:paddingStart="0dp"
            android:layout_margin="10dp"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/noteModel_textView_content_size"/>


    </android.support.v7.widget.CardView>

</RelativeLayout>